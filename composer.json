{
    "require": {
        "symfony/console": "^7.3",
        "php-school/cli-menu": "^4.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "Core/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite 'Unit Tests'",
        "test:integration": "phpunit --testsuite 'Integration Tests'",
        "test:coverage": "phpunit --coverage-html coverage"
    }
}
